# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1
DEBUG_MODE=False

# =============================================================================
# LLM API Settings (FREE - No cost, no credit card required)
# =============================================================================
# Provider options: groq (recommended), huggingface
# groq = Fastest, 14,400 requests/day free (RECOMMENDED)
# huggingface = 30,000 requests/month free
LLM_PROVIDER=groq

# Groq API (FREE - Get key at: https://console.groq.com)
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_LIGHT_MODEL=llama-3.1-8b-instant
GROQ_VISION_MODEL=meta-llama/llama-4-scout-17b-16e-instruct

# HuggingFace API (FREE - Get token at: https://huggingface.co/settings/tokens)
HF_TOKEN=
HF_MODEL=mistralai/Mistral-7B-Instruct-v0.3

# =============================================================================
# Embedding Model Settings
# =============================================================================
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# LangChain Settings
LANGCHAIN_CACHE=sqlite
LANGCHAIN_CACHE_PATH=./.langchain.db
LANGCHAIN_VERBOSE=False

# ChromaDB Settings
CHROMA_PERSIST_DIR=./data/vector_db/chroma
CHROMA_COLLECTION=edunotes_kb
EMBEDDING_DIMENSION=384

# Knowledge Base
KB_PATH=./data/knowledge_base
KB_UPDATE_BATCH_SIZE=100
KB_CHUNK_SIZE=512
KB_CHUNK_OVERLAP=50

# Scraping Settings
SCRAPER_TIMEOUT=10
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_USER_AGENT=EduNotes/1.0

# Cache Settings
CACHE_DIR=./cache
CACHE_EMBEDDING_TTL=86400
CACHE_SUMMARY_TTL=604800
CACHE_SCRAPE_TTL=3600

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/edunotes.log
LOG_ROTATION=10 MB
LOG_RETENTION=7 days

# HuggingFace Cache (for embedding model)
HUGGINGFACE_CACHE_DIR=~/.cache/huggingface

# =============================================================================
# Study Features Settings
# =============================================================================
FLASHCARD_STORAGE=./data/flashcards
PROGRESS_STORAGE=./data/progress
MAX_FLASHCARDS_PER_NOTE=20
QUIZ_QUESTIONS_COUNT=10

# =============================================================================
# Web Search Settings
# =============================================================================
# Search provider: duckduckgo (free, default), serper (requires API key)
SEARCH_PROVIDER=duckduckgo
SEARCH_MAX_RESULTS=10
SEARCH_REGION=wt-wt
SEARCH_SAFE_SEARCH=moderate

# Serper API (optional premium - 2,500 free/month)
# Get key at: https://serper.dev
SERPER_API_KEY=

# Fallback search: auto-tries Google when DuckDuckGo returns 0 results
# Uses googlesearch-python (free, no API key). Set to false to disable.
SEARCH_FALLBACK_ENABLED=true

# Web Search Agent Settings
WEB_SEARCH_MAX_URLS_TO_SCRAPE=3
WEB_SEARCH_MIN_CONTENT_LENGTH=200
WEB_SEARCH_CACHE_TTL=3600

# Performance
MAX_WORKERS=4
BATCH_SIZE=32
MAX_CONCURRENT_REQUESTS=10