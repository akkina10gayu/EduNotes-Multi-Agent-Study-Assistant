# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1
DEBUG_MODE=False

# Model Settings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
SUMMARIZATION_MODEL=google/flan-t5-base
QA_MODEL=deepset/roberta-base-squad2
MODEL_CACHE_DIR=./models/downloaded

# LangChain Settings
LANGCHAIN_CACHE=sqlite
LANGCHAIN_CACHE_PATH=./.langchain.db
LANGCHAIN_VERBOSE=False

# ChromaDB Settings
CHROMA_PERSIST_DIR=./data/vector_db/chroma
CHROMA_COLLECTION=edunotes_kb
EMBEDDING_DIMENSION=384

# Knowledge Base
KB_PATH=./data/knowledge_base
KB_UPDATE_BATCH_SIZE=100
KB_CHUNK_SIZE=512
KB_CHUNK_OVERLAP=50

# Scraping Settings
SCRAPER_TIMEOUT=10
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_USER_AGENT=EduNotes/1.0

# Cache Settings
CACHE_DIR=./cache
CACHE_EMBEDDING_TTL=86400
CACHE_SUMMARY_TTL=604800
CACHE_SCRAPE_TTL=3600

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/edunotes.log
LOG_ROTATION=10 MB
LOG_RETENTION=7 days

# HuggingFace (Optional)
HUGGINGFACE_TOKEN=
HUGGINGFACE_CACHE_DIR=~/.cache/huggingface

# Performance
MAX_WORKERS=4
BATCH_SIZE=32
MAX_CONCURRENT_REQUESTS=10